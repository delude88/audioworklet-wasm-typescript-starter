{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "composite": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
