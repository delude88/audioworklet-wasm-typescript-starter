{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "webworker",
      "esnext"
    ],
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true
  },
  "include": [
    "src/wasm/**/*.js",
    "src/worker/**/*.ts",
    "src/worklets/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
